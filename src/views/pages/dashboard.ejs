<!-- @format -->

<!DOCTYPE html>
<html lang="zh-Hant">
    <head>
        <%- include('../partials/head') %>
        <title>字體 | emfont</title>
        <meta property="og:title" content="字體 | emfont" />
        <link rel="stylesheet" href="/static/css/fonts.css" />
    </head>
    <body>
        <%- include('../partials/nav') %>
        <main class="fader">
            <h1>儀錶板</h1>
            <div class="hr"></div>

            <div class="new-container">
                <h2>專案列表</h2>
                <button
                    class="button-cute"
                    onclick="document.querySelector('main').classList.add('pop')"
                >
                    <img src="/static/img/plus.svg" alt="" />
                </button>
            </div>
            <% if (!!locals.projects) { %> <% projects.forEach(project => { %>
            <a href="/p/<%= project.project_id %>">
                <div class="m3-stroke project">
                    <div class="m3-content">
                        <div class="volcano">
                            <img src="<%= project.profile_image %>" alt="" />
                        </div>
                        <div class="project-title">
                            <h3><%= project.project_name %></h3>
                            <p>上次編輯：<%= project.last_updated %></p>
                        </div>
                        <div class="project-data">
                            <div>
                                <img src="/static/img/a-stroke.svg" alt="" />
                                <div class="carve-text">
                                    <%= project.fonts_count %>
                                </div>
                            </div>
                            <div>
                                <img
                                    src="/static/img/global-stroke.svg"
                                    alt=""
                                />
                                <div class="carve-text">
                                    <%= project.domains_count %>
                                </div>
                            </div>
                            <div>
                                <img
                                    src="/static/img/analytics-stroke.svg"
                                    alt=""
                                />
                                <div class="carve-text">
                                    <%= project.files_count %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div></a
            >
            <% }); %> <% if (projects.length === 0) { %>
            <p>你還沒有專案喔</p>
            <% } else { %>
            <p>專案載入失敗。重新載入試試?</p>
            <% } %> <% } %>

            <div class="new-container">
                <h2>我的網域</h2>
                <button
                    class="button-cute"
                    onclick="document.querySelector('main').classList.add('pop')"
                >
                    <img src="/static/img/plus.svg" alt="" />
                </button>
            </div>
            <div class="domain-container">
                <% if (!!locals.domains) { %> <% domains.forEach(domain => { %>
                <div class="m3-stroke">
                    <div class="m3-content">
                        <h3><%= domain.domain_name %></h3>
                        <div class="volcano">
                            <img src="<%= domain.favicon %>" alt="" />
                        </div>
                    </div>
                </div>
                <% }); %> <% if (domains.length === 0) { %>
                <p>你還沒有驗證網域喔</p>
                <% } else { %>
                <p>Can't load domain</p>
                <% } %> <% } %>
            </div>
            <%- include('../partials/friend') %>
        </main>
        <div class="box popUp" id="newProject">
            <h2>新增專案</h2>
            <p>專案名稱</p>
            <div class="input">
                <div class="input-container">
                    <input type="text" placeholder="example.com" />
                </div>
            </div>
            <div class="btn">建立</div>
        </div>
        <%- include('../partials/footer') %>
        <script src="/public/emfont.js"></script>
    </body>
</html>
